<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Educational Chatroom</title>
    <style>
        body { font-family: Arial, sans-serif; }
        #chat-window {
            border: 1px solid #ccc;
            height: 300px;
            padding: 10px;
            overflow-y: scroll;
            margin-bottom: 10px;
        }
        .message { margin-bottom: 5px; }
        .user { font-weight: bold; color: blue; }
    </style>
</head>
<body>

    <h2>Simple Mock Chat</h2>
    <div id="chat-window">
        <div class="message"><span class="user">System</span>: Welcome to the chat!</div>
    </div>
    
    <input type="text" id="user-input" placeholder="Type your message..." style="width: 80%;">
    <button onclick="sendMessage()">Send</button>

    <script>
        function sendMessage() {
            const inputElement = document.getElementById('user-input');
            const messageText = inputElement.value.trim();

            if (messageText !== "") {
                const chatWindow = document.getElementById('chat-window');
                const newMessage = document.createElement('div');
                newMessage.classList.add('message');
                // The "User" is hardcoded for this educational example.
                newMessage.innerHTML = `<span class="user">Me</span>: ${messageText}`;
                
                chatWindow.appendChild(newMessage);
                inputElement.value = ''; // Clear input field
                chatWindow.scrollTop = chatWindow.scrollHeight; // Scroll to bottom
            }
        }
        // Allows pressing Enter to send
        document.getElementById('user-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
    </script>

</body>
</html>


